
<%= simple_form_for(@estudante) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :telemovel %>
    <%= f.association :turmas, collection: current_utilizador.turmas.map{ |turma| [turma.descricao, turma.id]}  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
