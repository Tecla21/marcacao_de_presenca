
<%= simple_form_for(@turma) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :descricao, label: 'Descrição' %>
    <%= f.association :estudantes, label: 'Estudantes', collection: current_utilizador.estudantes.map{|estudante| [estudante.nome, estudante.id]} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Criar turma" %>
  </div>
<% end %>
