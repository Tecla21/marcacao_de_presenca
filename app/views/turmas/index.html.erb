<h1>Turmas</h1>

<table class="table table-bordred table-striped">
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Utilizador</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @turmas.each do |turma| %>
      <tr>
        <td><%= turma.descricao %></td>
        <td><%= turma.utilizador.email %></td>
        <td><%= link_to 'Mostrar', turma %></td>
        <td><%= link_to 'Alterar', edit_turma_path(turma) %></td>
        <td><%= link_to 'Eliminar', turma, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Turma', new_turma_path %>
